<div class="info-bar" ng-show="isInfobarVisible">
  <div class="nav mobile-show">
    <button ng-click="navigateToConversationList()">&laquo; Back</button>
  </div>

  <div class="user-info">{{conversation.user.name}}</div>

  <div class="controls">

    <ul class="menu-wrapper">
      <li class="menu">
        <button class="menu-switch">Menu</button>
        <ul class="chat-options">
          <li>
            <button>Bring to attention</button>
          </li>
          <li>
            <button>&#10004; Mark as resolved</button>
          </li>
        </ul>
      </li>
    </ul>

  </div>
</div>

<div class="messages">
  <div class="messages-wrapper">
    <div class="message-wrapper" ng-repeat="activity in conversation.messages">
      <chat-activity
        activity-id="{{activity.id}}"
        type="{{activity.activity_type}}"
        content="{{activity.content}}"
        sender-id="{{activity.sender.id}}"
        sender-name="{{activity.sender.name}}"
        receiver-id="{{activity.receiver.id}}"
        receiver-name="{{activity.receiver.name}}"/>
    </div>
  </div>
</div>

<form class="chat-input-wrapper" ng-submit="postMsg()">
  <input type="text" class="chat-input" ng-model="chatInput" placeholder="Enter your message here..."/>
</form>
